<main class="main--user-function-form">

    <div class="background"></div>

    <div class="m-user-function-form">
        <h1>Group login</h1>

        <%= form_tag teacher_classroom_login_path(params[:id]) do |f| %>
            <p>
                Looks like you're in <%= teacher.teacher_name %>'s group.
            </p>

            <div class="field">
                <%= label_tag :name, "Enter your name" %><br />
                <%= text_field_tag :name, nil, {autofocus: true} %>
            </div>

            <div class="actions">
                <%= submit_tag "Log in" %>
            </div>
        <% end %>

    </div>

</main>
