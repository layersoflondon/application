<% content_for :title, "New comment on your record" %>

<!-- start copy -->
<tr>
    <td align="left" bgcolor="#ffffff" style="padding: 24px; font-family: 'Muli', Helvetica, Arial, sans-serif; font-size: 16px; line-height: 24px;">
        <p style="margin: 0;">Hello there. <%= @comment.user.name %> has added a comment on your record '<%= @record.title %>'.</p>
    </td>
</tr>
<!-- end copy -->

<!-- start copy -->
<tr>
    <td align="left" bgcolor="#ffffff" style="padding: 24px; font-family: 'Muli', Helvetica, Arial, sans-serif; font-size: 16px; line-height: 24px;">
        <p style="margin: 0;">Here's the comment:</p>
        <br>
        <%= @comment.content.html_safe %>

    </td>
</tr>
<!-- end copy -->

<!-- start button -->
<tr>
    <td align="left" bgcolor="#ffffff">
        <table border="0" cellpadding="0" cellspacing="0" width="100%">
            <tr>
                <td align="center" bgcolor="#ffffff" style="padding: 12px;">
                    <table border="0" cellpadding="0" cellspacing="0">
                        <tr>
                            <td align="center" bgcolor="#549a77" style="border-radius: 6px;">
                                <a href="<%= resource_map_url(resource: 'records', id: @record.id, anchor: "comment-#{@comment.id}") %>" target="_blank" style="display: inline-block; padding: 16px 36px; font-family: 'Muli', Helvetica, Arial, sans-serif; font-size: 16px; color: #ffffff; text-decoration: none; border-radius: 6px;">View and reply to the comment</a>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
    </td>
</tr>
<!-- end button -->

<tr>
    <td align="left" bgcolor="#ffffff" style="padding: 24px; font-family: 'Muli', Helvetica, Arial, sans-serif; font-size: 16px; line-height: 24px;">
        <p><strong>Don't want to get emails about this record?</strong> <%= link_to "Mute the comment thread here", unsubscribe_unsubscribed_record_comment_url(@record.id) %> and we'll stop sending emails about this record.</p>
    </td>
</tr>