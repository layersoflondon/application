<li>
  <label for="">
    URL
  </label>
  <%= f.text_field :layer_data, name: 'layer[layer_data][url]', value: f.object.layer_data.try(:[], 'url') %>
</li>

<li>
  <label for="">
    Vector Tiles
  </label>
  <%= f.check_box :layer_data, {checked: f.object.layer_data.try(:[], 'vector_tiles').to_s === 'true', name: 'layer[layer_data][vector_tiles]'}, true, false %>
</li>
