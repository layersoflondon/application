<li>
  <label for="">
    URL
  </label>
  <%= f.text_field :layer_data, name: 'layer[layer_data][url]', value: f.object.layer_data.try(:[], 'url') %>
</li>

<li>
  <label for="">
    Vector Tiles
  </label>
  <%= f.check_box :layer_data, {checked: f.object.layer_data.try(:[], 'vector_tiles').to_s === 'true', name: 'layer[layer_data][vector_tiles]'}, true, false %>
</li>

<li>
  <label for="">
    Layer Colour
  </label>

  <div class="field-layer-colours">
    <% Layer.vector_layer_colours.each do |key, value| %>
      <%= content_tag(:div, class: 'colour', style: "background: #{value}") do %>
        <%= f.radio_button :layer_data, value, {checked: f.object.layer_data.try(:[], 'vector_layer_colour').to_s === value.to_s, name: 'layer[layer_data][vector_layer_colour]'} %>
      <% end %>
    <% end %>
  </div>
</li>
