<%= form_with(url: resources_map_path(resource: :search), method: :get, local: :true) do %>
    <div class="m-big-search">
        <div class="search">
            <%= hidden_field_tag :results, true %>
            <%= text_field_tag :q, nil, placeholder: "Search records on the map" %>
            <%= submit_tag 'Go' %>
        </div>
        <p>Search for a topic you’re interested in…</p>
    </div>
<% end %>
